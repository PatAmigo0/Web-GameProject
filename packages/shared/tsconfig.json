{
	"compilerOptions": {
		"composite": true,
		"outDir": "dist",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"useDefineForClassFields": false
	},
	"include": [
		"src/**/*",
		"dist"
	]
}