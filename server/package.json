{
	"private": true,
	"name": "server",
	"version": "1.0.0",
	"type": "module",
	"description": "npm init template for bootstrapping an empty Colyseus project",
	"main": "dist/app.js",
	"engines": {
		"node": ">= 20.9.0"
	},
	"scripts": {
		"dev": "cross-env NODE_ENV=development tsx watch src/app.ts",
		"start": "cross-env NODE_ENV=production node --enable-source-maps dist/app.js",
		"build": "tsup",
		"prisma:generate": "dotenv -e .env.development npx prisma generate",
		"prisma:dev": "dotenv -e .env.development npx prisma migrate dev",
		"prisma:deploy": "dotenv -e .env.production npx prisma migrate deploy",
		"loadtest": "tsx __tests__/loadtest/example.ts --room my_room --numClients 2",
		"test": "mocha -r tsx __tests__/spec/**_test.ts --exit --timeout 15000"
	},
	"author": "",
	"license": "UNLICENSED",
	"bugs": {
		"url": "https://github.com/colyseus/create-colyseus/issues"
	},
	"homepage": "https://github.com/colyseus/create-colyseus#readme",
	"devDependencies": {
		"@colyseus/loadtest": "^0.16.0",
		"@colyseus/testing": "^0.16.0",
		"@types/bcrypt": "^6.0.0",
		"@types/cors": "^2.8.19",
		"@types/express": "^4.17.1",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.10.1",
		"cross-env": "^10.1.0",
		"dotenv-cli": "^11.0.0",
		"esbuild-plugin-copy": "^2.1.1",
		"mocha": "^10.2.0",
		"prisma": "^6.19.0",
		"rimraf": "^5.0.0",
		"tsc-alias": "^1.8.16",
		"tsup": "^8.5.1",
		"tsx": "^4.10.2",
		"typescript": "^5.0.4"
	},
	"dependencies": {
		"@colyseus/monitor": "^0.16.0",
		"@colyseus/playground": "^0.16.0",
		"@colyseus/redis-driver": "^0.16.1",
		"@colyseus/tools": "^0.16.0",
		"@prisma/client": "^6.19.0",
		"bcrypt": "^6.0.0",
		"colyseus": "^0.14.17",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"express": "^4.18.2",
		"mongoose": "^8.19.4"
	}
}
