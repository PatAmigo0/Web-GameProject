{
	"private": true,
	"name": "server",
	"version": "1.0.0",
	"type": "module",
	"description": "Серверная часть проекта",
	"main": "dist/app.js",
	"engines": {
		"node": ">= 20.9.0"
	},
	"scripts": {
		"dev": "cross-env NODE_ENV=development tsx watch src/app.ts",
		"start": "cross-env NODE_ENV=production node --enable-source-maps dist/app.js",
		"build": "tsup",
		"prisma:generate": "prisma generate",
		"prisma:dev": "prisma migrate dev",
		"prisma:deploy": "prisma migrate deploy",
		"prisma:reset": "prisma migrate reset",
		"docker:start": "node --enable-source-maps dist/app.js",
		"docker:prisma:generate": "prisma generate --schema=/prod/server/prisma/schema.prisma",
		"docker:prisma:deploy": "prisma migrate deploy --schema=./prisma/schema.prisma",
		"loadtest": "tsx __tests__/loadtest/example.spec.ts  --room baseGameRoom --numClients 8",
		"test": "mocha -r tsx __tests__/spec/**.test.ts --exit --timeout 15000"
	},
	"author": "",
	"license": "UNLICENSED",
	"bugs": {
		"url": "https://github.com/colyseus/create-colyseus/issues"
	},
	"homepage": "https://github.com/colyseus/create-colyseus#readme",
	"devDependencies": {
		"@colyseus/loadtest": "^0.16.2",
		"@colyseus/testing": "^0.16.3",
		"@types/bcrypt": "^6.0.0",
		"@types/cors": "^2.8.19",
		"@types/express": "^4.17.25",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.10.9",
		"@types/pg": "^8.16.0",
		"cross-env": "^10.1.0",
		"dotenv-cli": "^11.0.0",
		"esbuild-plugin-copy": "^2.1.1",
		"mocha": "^11.7.5",
		"rimraf": "^5.0.10",
		"tsc-alias": "^1.8.16",
		"tsup": "^8.5.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@colyseus/core": "^0.16.24",
		"@colyseus/monitor": "^0.16.7",
		"@colyseus/playground": "^0.16.4",
		"@colyseus/redis-driver": "^0.16.1",
		"@colyseus/schema": "^3.0.76",
		"@colyseus/tools": "^0.16.18",
		"@colyseus/ws-transport": "^0.16.5",
		"@game/shared": "workspace:*",
		"@prisma/adapter-pg": "^7.2.0",
		"@prisma/client": "^7.2.0",
		"@prisma/extension-accelerate": "^2.0.2",
		"@types/jsonwebtoken": "^9.0.10",
		"bcrypt": "^6.0.0",
		"colyseus.js": "^0.16.22",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"express": "^5.2.1",
		"express-basic-auth": "^1.2.1",
		"express-rate-limit": "^8.2.1",
		"helmet": "^8.1.0",
		"jsonwebtoken": "^9.0.3",
		"mongoose": "^8.21.0",
		"pg": "^8.17.1",
		"prisma": "^7.2.0",
		"zod": "^4.3.5"
	}
}
